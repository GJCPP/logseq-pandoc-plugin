{
	"Environment" : {
		"Proof" : {
		  "match": "### Proof",
		  "begin": "\\begin{proof}",
		  "end": "\\end{proof}",
		  "islatex": true
		},
		"Theorem" : {
		  "match": "### Theorem",
		  "begin": "\\begin{theorem}",
		  "end": "\\end{theorem}",
		  "islatex": true
		},
		"Problem" : {
		  "match": "### Problem",
		  "begin": "\\begin{problem}",
		  "end": "\\end{problem}",
		  "islatex": true
		},
		"Answer" : {
		  "match": "### Answer",
		  "begin": "\\begin{answer}",
		  "end": "\\end{answer}",
		  "islatex": true
		}
	},

	"Content" : {
		"collapsed" : {
			"trigger": "collapsed:: [A-Za-z0-9-_]+",
			"replacement": "",
			"matchType": "regex"
		},
		"background-color" : {
			"trigger": "background-color:: (.+)",
			"matchType": "regex",
			"front": "\\textcolor{$1}{",
			"replacement": "",
			"back": "}",
			"islatex": true
		},
		"public" : {
			"trigger": "public:: (.+)",
			"matchType": "regex",
			"front": "",
			"replacement": "",
			"back": ""
		}
	}
}